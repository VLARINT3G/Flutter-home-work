void main() {
  print(lengthOfLastWord("  hello   wodadasdasdasdasdasrld   ")); // 5
}

int lengthOfLastWord(String roman) {
  int length = 0;
  bool foundSymbol = false;

  for (int i = roman.length - 1; i >= 0; i--) {
    if (roman[i] != ' ') {
      foundSymbol = true;
      length++;
    } else {
      if (foundSymbol) {
        break; // встретили пробел после слова → выходим
      }
    }
  }

  return length;
}
